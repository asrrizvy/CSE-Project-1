#include <stdio.h>
int main() {
    int num;
    printf("Enter an integer: ");
    scanf("%d", &num);

    // Using if-else
    if (num % 2 == 0)
        printf("Using if-else: %d is Even\n", num);
    else
        printf("Using if-else: %d is Odd\n", num);

    // Using switch
    switch (num % 2) {
        case 0: printf("Using switch: %d is Even\n", num); break;
        case 1: printf("Using switch: %d is Odd\n", num); break;
    }

    return 0;
}
